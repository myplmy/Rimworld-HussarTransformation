<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <JobDef>
    <defName>EnterHussarPod</defName>
    <driverClass>HussarTransformation.JobDriver_EnterHussarPod</driverClass>
    <reportString>entering hussar pod.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <!-- This recipe is a placeholder to make the interaction work, the actual logic is in C# -->
