<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>HussarPod</defName>
    <label>hussar transformation pod</label>
    <description>A high-tech pod that restructures a baseliner's xenotype into a hussar through a complex bio-mechanical process. Requires Go-Juice, medicine, and components to operate. The process is lengthy and requires constant power.</description>
    <thingClass>HussarTransformation.Building_HussarPod</thingClass>
    <graphicData>
  <!-- 옵션 1: 올바른 바닐라 경로 -->
      <texPath>Things/Building/Ship/ShipCryptosleepCasket</texPath>
  
  <!-- 또는 옵션 2: 다른 바닐라 건물 사용 -->
  <!-- <texPath>Things/Building/Production/BiosculturePod/BiosculturePod</texPath> -->
  
  <!-- 또는 옵션 3: 단순 박스 형태 -->
  <!-- <texPath>Things/Building/Production/HopperFull</texPath> -->
  <!-- <graphicClass>Graphic_Single</graphicClass> -->
      <graphicClass>Graphic_Multi</graphicClass>
      <color>(180,180,255)</color>  <!-- RGB 값으로 색조 변경 -->
      <drawSize>(1,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <Mass>100</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,2)</size>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>200</basePowerConsumption>  <!-- 기본값 200 설정 -->
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <building>
      <canPlaceOverWall>false</canPlaceOverWall>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
    </building>
    <researchPrerequisites>
      <li>HussarTransformationSurgery</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <designationCategory>Misc</designationCategory>
  </ThingDef>
</Defs>

