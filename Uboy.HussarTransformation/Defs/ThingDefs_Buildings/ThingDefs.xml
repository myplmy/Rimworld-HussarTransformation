<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>HussarPod</defName>
    <label>hussar transformation pod</label>
    <description>A high-tech pod that restructures a baseliner's xenotype into a hussar through a complex bio-mechanical process. Requires Go-Juice, medicine, and components to operate. The process is lengthy and requires constant power.</description>
    <thingClass>HussarTransformation.Building_HussarPod</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/HussarPod</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <Mass>100</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,2)</size>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <!-- Set base consumption to 0. C# code will handle consumption when active. -->
        <basePowerConsumption>0</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
       <li Class="CompProperties_Enterable">
        <enterJob>EnterHussarPod</enterJob>
        <exitJob>JobDefOf.Vomit</exitJob> 
        <enterSound>CryptosleepCasket_Accept</enterSound>
        <exitSound>CryptosleepCasket_Eject</exitSound>
      </li>
    </comps>
    <building>
      <canPlaceOverWall>false</canPlaceOverWall>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
    </building>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>HussarTransformationTech</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <designationCategory>Misc</designationCategory>
  </ThingDef>
</Defs>

